{
  "name": "@flatfile/plugin-enrich-summarize",
  "version": "0.2.0",
  "url": "https://github.com/FlatFilers/flatfile-plugins/tree/main/enrich/summarize",
  "description": "A Flatfile plugin for text summarization and key phrase extraction",
  "registryMetadata": {
    "category": "enrich"
  },
  "type": "module",
  "engines": {
    "node": ">= 16"
  },
  "exports": {
    ".": {
      "node": {
        "types": {
          "import": "./dist/index.d.ts",
          "require": "./dist/index.d.cts"
        },
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      },
      "browser": {
        "types": {
          "import": "./dist/index.d.ts",
          "require": "./dist/index.d.cts"
        },
        "import": "./dist/index.browser.js",
        "require": "./dist/index.browser.cjs"
      },
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "build:prod": "NODE_ENV=production tsup",
    "checks": "tsc --noEmit && attw --pack . && publint .",
    "lint": "tsc --noEmit",
    "test": "vitest run --mode defaults src/*.spec.ts --passWithNoTests",
    "test:unit": "vitest run --mode defaults src/*.spec.ts --passWithNoTests --exclude src/*.e2e.spec.ts",
    "test:e2e": "vitest run --mode defaults src/*.e2e.spec.ts --passWithNoTests --no-file-parallelism"
  },
  "keywords": [
    "flatfile-plugins",
    "category-enrich"
  ],
  "author": "Flatfile, Inc.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FlatFilers/flatfile-plugins.git",
    "directory": "enrich/summarize"
  },
  "license": "ISC",
  "dependencies": {
    "@flatfile/plugin-record-hook": "^1.8.0",
    "compromise": "^14.14.0"
  },
  "peerDependencies": {
    "@flatfile/api": "^1.4.13",
    "@flatfile/listener": "^1.1.0"
  },
  "devDependencies": {
    "@flatfile/bundler-config-tsup": "^0.1.0",
    "@flatfile/config-vitest": "^0.0.0"
  }
}