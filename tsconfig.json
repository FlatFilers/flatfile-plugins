{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    // TODO: set this to true once we have a better way to handle types
    "verbatimModuleSyntax": false,
    /* Strictness */
    // TODO: set this to true once we have a better way to handle types
    "strict": false,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    /* If not transpiling with TypeScript: */
    "module": "Preserve",
    "lib": [ "es2022", "dom" ],
    "moduleResolution": "bundler",
    "noEmit": true
  },
  "exclude": [
    "**/node_modules/",
    "**/dist/",
    "**/.*",
    "**/*.spec.ts"
  ]
}
