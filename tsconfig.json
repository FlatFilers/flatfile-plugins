{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    /* If transpiling with TypeScript: */
    "module": "Preserve",
    "lib": [ "es2022", "dom" ],
    "noEmit": true
  },
  "exclude": [
    "**/node_modules/",
    "**/dist/",
    "**/.*",
    "**/*.spec.ts"
  ]
}
