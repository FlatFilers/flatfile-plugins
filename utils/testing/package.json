{
  "name": "@flatfile/utils-testing",
  "version": "0.3.1",
  "description": "A utility package for testing plugins",
  "engines": {
    "node": ">= 16"
  },
  "type": "module",
  "exports": {
    ".": {
      "node": {
        "types": {
          "import": "./dist/index.d.ts",
          "require": "./dist/index.d.cts"
        },
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      },
      "browser": {
        "types": {
          "import": "./dist/index.d.ts",
          "require": "./dist/index.d.cts"
        },
        "import": "./dist/index.browser.js",
        "require": "./dist/index.browser.cjs"
      },
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build:rollup": "rollup -c",
    "build:rollup:watch": "rollup -c --watch",
    "build:rollup:prod": "NODE_ENV=production rollup -c",
    "build:tsup": "tsup",
    "build:tsup:watch": "tsup --watch",
    "build:tsup:prod": "NODE_ENV=production tsup",
    "check-exports": "attw --pack .",
    "lint": "tsc",
    "test": "jest src/*.spec.ts --detectOpenHandles",
    "test:unit": "jest src/*.spec.ts --testPathIgnorePatterns=.*\\.e2e\\.spec\\.ts$ --detectOpenHandles",
    "test:e2e": "jest src/*.e2e.spec.ts --detectOpenHandles"
  },
  "author": "Carl Brugger",
  "repository": {
    "type": "git",
    "url": "https://github.com/FlatFilers/flatfile-plugins.git",
    "directory": "utils/testing"
  },
  "license": "ISC",
  "dependencies": {
    "@flatfile/api": "^1.9.19",
    "@flatfile/listener": "^1.1.0",
    "@flatfile/listener-driver-pubsub": "^2.0.0",
    "@jest/globals": "^29.6.4",
    "cross-fetch": "^4.0.0"
  },
  "devDependencies": {
    "@flatfile/bundler-config-tsup": "^0.0.0"
  }
}
