    "@flatfile/listener": "^1.0.5"
  },
  "devDependencies": {
    "@flatfile/hooks": "^1.5.0",
    "@flatfile/rollup-config": "^0.1.1",
    "@types/node": "^22.6.1",
    "typescript": "^5.6.2",
    "rollup": "^4.22.4",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.13"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FlatFilers/flatfile-plugins.git",
    "directory": "plugins/text-summarization"
