{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "es2020",
      "types": ["node", "jest"],
      "composite": false,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "pretty": true,
      "forceConsistentCasingInFileNames": true,
      "inlineSources": false,
      "isolatedModules": false,
      "moduleResolution": "node",
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "preserveWatchOutput": true,
      "skipLibCheck": true,
      "strict": true
  },
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*", "__sandbox__"],
  "include": ["./src"],
}
