{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "build:rollup": {
            "outputs": ["dist/**"],
            "dependsOn": ["^build:rollup"]
        },
        "build:tsup": {
            "outputs": ["dist/**"],
            "dependsOn": ["^build:tsup"]
        },
        "build:rollup:prod": {
            "outputs": ["dist/**"],
            "dependsOn": ["^build:rollup:prod"]
        },
        "build:tsup:prod": {
            "outputs": ["dist/**"],
            "dependsOn": ["^build:tsup:prod"]
        },
        "test": {
            "inputs": ["**/*.spec.ts"]
        },
        "check-exports": {
            "dependsOn": ["^build"]
        }
    }
}
