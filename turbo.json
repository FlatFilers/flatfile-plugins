{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "build": {
            "outputs": ["dist/**"],
            "dependsOn": ["^build"]
        },
        "build:prod": {
            "outputs": ["dist/**"],
            "dependsOn": ["^build:prod"]
        },
        "test": {
            "inputs": ["**/*.spec.ts"]
        },
        "check-exports": {
            "dependsOn": ["^build"]
        }
    }
}
